@page
@using ShoeShop.Models
@model ShoeShop.Pages.OrderModel
@{
}

@if (Model.Order == null) {
    <div class="row"><p class="text-center fs-1">Заказ не найден</p></div>
} else {
    @* Заголовок *@
    <div class="d-flex flex-row-reverse p-1 mt-3">
        <h1>Заказ № @Model.Order.Id</h1>
    </div>

    <div class="row">
        @if (Model.Order.Status == OrderStatus.Created) {
            <p class="text-center fs-1">Заказ создан</p>
        } else if (Model.Order.Status == OrderStatus.Processing) {
            <p class="text-center fs-1">Заказ обрабатывается</p>
        } else if (Model.Order.Status == OrderStatus.Canceled) {
            <p class="text-center fs-1">Заказ отменен</p>
        } else if (Model.Order.Status == OrderStatus.Completed) {
            <p class="text-center fs-1">Заказ выполнен</p>
        }
    </div>
    <div class="row">
        <form>
            <div class="row">
                <div class="col">
                    <label for="name" class="form-label">Получатель заказа</label>
                    <input id="name" name="name" type="text" class="form-control" value="@Model.Order.Recipient.Name" readonly />
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <label for="city" class="form-label">Город</label>
                    <input id="city" name="city" type="text" class="form-control" value="@Model.Order.Recipient.City" readonly />
                </div>
                <div class="col">
                    <label for="street" class="form-label">Улица</label>
                    <input id="street" name="street" type="text" class="form-control" value="@Model.Order.Recipient.Street" readonly />
                </div>
                <div class="col">
                    <label for="house" class="form-label">Дом</label>
                    <input id="house" name="house" type="text" class="form-control" value="@Model.Order.Recipient.House" readonly />
                </div>
                <div class="col">
                    <label for="apartment" class="form-label">Квартира</label>
                    <input id="apartment" name="apartment" type="text" class="form-control" value="@Model.Order.Recipient.Apartment" readonly />
                </div>
                <div class="col">
                    <label for="phone" class="form-label">Телефон</label>
                    <input id="phone" name="phone" type="text" class="form-control" value="@Model.Order.Recipient.Phone" readonly />
                </div>
            </div>
            <div class="row">
                <div class="row">
                    <label for="coment" class="form-label">Коментарий к заказу</label>
                    <textarea id="coment" name="coment" class="form-control  form-control-lg" readonly>@Model.Order.Coment</textarea>
                </div>
            </div>

            <div class="row border border-2 mt-3 p-3">
                <table>
                    @foreach (OrderDetail orderDetail in Model.Order.OrderDetails ?? Enumerable.Empty<OrderDetail>()) {
                        <tr>
                            <td class=""><img src="@orderDetail.Image" style="width: 10%;"></td>
                            <td><a asp-page="/Product" asp-route-id="@orderDetail.ProductId">@orderDetail.Name</a></td>
                            <td>@orderDetail.Price</td>
                        </tr>
                    }
                </table>
            </div>
        </form>
    </div>
    <div class="row">
        @* Если заказ создан или находится в обработке, то его можно отменить. Выполненные и уже отмененные заказы отменить нельзя. *@
        @if (Model.Order.Status == OrderStatus.Created || Model.Order.Status == OrderStatus.Processing) {
            <div class="mt-3">
                <form asp-page="/Order" asp-page-handler="cansel">
                    <input type="hidden" name="orderId" value="@Model.Order.Id" />
                    <button type="submit" class="btn btn-primary">Отменить</button>
                </form>
            </div>
        }
    </div>
}